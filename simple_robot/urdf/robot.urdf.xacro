<?xml version="1.0"?>

<robot name="basic_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.6" y="0.4" z="0.2" xyz="0 0 0" rpy="0 0 0"/>
    </link>

    <xacro:macro name="wheel_link" params="prefix">
        <link name="${prefix}_wheel">
            <visual>
                <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.12" length="0.06"/>
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.12" length="0.06"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.2" radius="0.12" length="0.06" xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </link>
    </xacro:macro>

    <xacro:macro name="wheel_joint" params="prefix y">
        <joint name="${prefix}_joint" type="continuous">
            <origin xyz="-0.2 ${y} -0.1" rpy="0.0 0.0 0.0"/>
            <parent link="base_link"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>
    </xacro:macro>

    <xacro:wheel_link prefix="right"/>
    <xacro:wheel_link prefix="left"/>

    <xacro:wheel_joint prefix="right" y="0.23"/>
    <xacro:wheel_joint prefix="left" y="-0.23"/>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.06" xyz="0 0 0" rpy="0 0 0"/>
    </link>

    <joint name="caster_joint" type="fixed">
        <origin xyz="0.2 0.0 -0.16" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="caster_wheel"/>
    </joint>

</robot>